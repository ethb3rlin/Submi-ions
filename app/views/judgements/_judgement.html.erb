<tr id="<%= dom_id(judgement.submission)%>">
  <td class="project-title">
    <%= link_to judgement.submission.title, judgement, class: 'is-size-5' %>
    <p class="is-size-7 is-italic">Scheduled at: <b class="is-size-6"><%= judgement.just_time %></b></p>
  </td>
  <td class="<%= 'editable' if judgement.technical_vote && policy(judgement.technical_vote).update? %>"><%= render judgement.technical_vote, kind: :technical if judgement.technical_vote %></td>
  <td class="<%= 'editable' if judgement.product_vote && policy(judgement.product_vote).update? %>"><%= render judgement.product_vote, kind: :product if judgement.product_vote %></td>
  <td class="<%= 'editable' if judgement.concept_vote && policy(judgement.concept_vote).update? %>"><%= render judgement.concept_vote, kind: :concept if judgement.concept_vote %></td>
  <% if Setting.hackathon_stage == :finalizing %>
    <td><%= judgement.total_score %></td>
  <% end %>

  <% if Setting.hackathon_stage == :judging %>
    <%= turbo_stream_from judgement, :votes %>
  <% end %>

</tr>
