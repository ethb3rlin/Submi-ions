<div class="panel-block is-block">
  <div class="level">
    <div class="level-left">
      <div class="level-item"><a class="is-family-monospace address-link" href="https://etherscan.io/address/<%= address.address %>"><%= address.address %></a></div>
    </div>
    <div class="level-right">
      <div class="level-item">
        <%= link_to admin_user_destroy_ethereum_address_path(@user,address), data: {turbo_method: :delete}, class: %w[button is-danger is-outlined is-small] do %>
          <%= lucide_icon('trash-2', size: 16) %>
        <% end %>
      </div>
    </div>
  </div>
</div>
